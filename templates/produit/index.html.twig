{% extends 'base.html.twig' %}

{% block title %}Nos produits -French_boutique{% endblock %}

{% block content %}
<div class ="row">
<div class="col-md-3">      
<h3> Filtrer </h3>
{{form(form)}}
</div>
<div class="col-md-9"> 
<h1>Nos produits</h1>
<div class ="row produit-container">

{% for produit in produit %}
<div class ="col-md-4">
<div class ="produit-item text-center">
<a href ="{{ path('app_product', {'Slug' : produit.Slug } )}}"><img src ="/img/{{ produit.illustration }}" alt="{{produit.name }}" class="img-fluid"></a>
<h5>{{produit.name}} </h5>
<span class="produit-subtitle">{{produit.subtitle}} </span>
<span class="produit-price">{{(produit.price / 100)|number_format(2, ',','.')}} </span>

</div>

</div>

{% endfor %}
</div> 
</div>

</div>



{% endblock %}
